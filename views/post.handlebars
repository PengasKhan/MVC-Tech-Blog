<div class='text-center'>
  <h2>{{title}}</h2>
  <p>{{{get_emoji}}}</p>
  <p>{{contents}}</p>
  <p>Created by {{user.username}} on {{format_date date_created}}</p>
  <p>
    <button class='btn btn-primary'>Add a Comment</button>
  </p>
</div>

<div class='row mt-4'>
  <div class='col-md-6'>
    <h3>Post a Comment:</h3>

    <form class='form new-comment-form' method='post' action='/api/comments'>
      <div class='form-group'>
        <input type='hidden' value='{{id}}' name='post_id' />
        <label for='post-contents'>Comment text:</label>
        <textarea
          class='form-input'
          id='comment-contents'
          name='contents'
        ></textarea>
      </div>
      <div class='form-group'>
        <button type='submit' class='btn btn-primary'>Submit</button>
      </div>
    </form>
  </div>

  {{#if comments.length}}
    <div class='col-md-6 comment-list'>
      <h3>Comments:</h3>

      {{#each comments as |comment|}}
        <div class='row mb-2'>
          <p>
            {{comment.user.username}}
            commented on
            {{format_date comment.date_created}}</p>
          <div class='col-md-8'>
            <h4><a href='/comment/{{comment.id}}'>{{comment.contents}}</a></h4>
          </div>
        </div>
      {{/each}}
    </div>
  {{/if}}
</div>